{
  "name": "@site-generator/analyzer",
  "version": "0.1.0",
  "description": "Content analysis engine for the site generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/workers/analysis-worker.ts --format esm --dts && node copy-workers.js",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "rm -rf dist .cache"
  },
  "dependencies": {
    "@site-generator/core": "workspace:*",
    "unified": "^11.0.4",
    "remark-parse": "^11.0.0",
    "remark-frontmatter": "^5.0.0",
    "mdast-util-to-string": "^4.0.0",
    "natural": "^6.12.0",
    "ml-kmeans": "^6.0.0",
    "vectordb": "^0.4.9"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0"
  }
}
