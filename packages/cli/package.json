{
  "name": "@site-generator/cli",
  "version": "0.1.0",
  "description": "Command line interface for the site generator",
  "bin": {
    "site-generator": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "rm -rf dist .cache"
  },
  "dependencies": {
    "@site-generator/core": "workspace:*",
    "@site-generator/extractor": "workspace:*",
    "@site-generator/analyzer": "workspace:*",
    "@site-generator/generator": "workspace:*",
    "commander": "^12.0.0",
    "inquirer": "^9.2.14",
    "ora": "^8.0.1",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "boxen": "^5.1.2",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
}
