{
  "name": "@site-generator/testing",
  "version": "0.1.0",
  "type": "module",
  "description": "Testing utilities and helpers for the site generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "rm -rf dist .cache"
  },
  "dependencies": {
    "@site-generator/core": "workspace:*",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "happy-dom": "^15.0.0",
    "jsdom": "^25.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
}
